{{! Add portfolio - Symbol and name details looking up from database table of symbols }}
<div class="mt-1">
  <div class="form-group">
    <label for="ticker-symbol">Ticker Symbol</label>
    <input
      type="text"
      class="form-control my-2"
      id="tickerSymbol"
      placeholder="Enter Ticker Symbol"
      readonly
    />
    <input
      type="hidden"
      id="tickerId"
    />
    <button
      id="symbol-lookup"
      type="button"
      class="btn btn-primary"
    >Lookup</button>
  </div>
  <div class="form-group mt-2">
    <label for="tickerName">Ticker Name</label>
    <input
      type="text"
      class="form-control"
      id="tickerName"
      placeholder="Select Ticker Name"
      readonly
    />
  </div>
  <div class="form-group mt-3">
    <label for="quantity">Quantity</label>
    <input
      type="number"
      class="form-control"
      id="quantity"
      placeholder="Enter purchase quantity"
    />
  </div>
  <div class="form-group mt-3">
    <label for="purchase-date">Purchase Date</label>
    <input type="date" id="purchase-date" class="form-control" name="purchase-date" onchange="setPurchasePrice()" placeholder="Select Purchase date" />
  </div>
  <div class="form-group mt-3">
    <label for="purchase-price">Purchase Price</label>
    <input
      type="number"
      step="0.01"
      class="form-control"
      id="purchasePrice"
      placeholder="Purchase price" readonly
    />
  </div>
  {{! get Closing price of Stock from third party API }}
  <div class="form-group mt-2">
    <label for="current-marketprice">Current Price</label>
    <input
      type="number"
      step="0.01"
      class="form-control"
      id="cmarketPrice"
      placeholder="Current Market price"
      readonly
    />
  </div>
<div class="mt-2"> 
  <button id="save-investment" type="submit" class="btn btn-primary save-inv-btn" onclick="saveInvestmentFormHandler">Submit
    <i class="fas fa-save"></i>
  </button>
  <button id="cancel-form" type="button" class="btn btn-warning ml-2">Cancel</button>
</div>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content ml-5 mt-5 pl-5 w-50">
    <span class="ml-auto close">&times;</span>
    <h4>Search ticker</h4>
    <div class="d-flex align-items-center">
      <label for="ticker-symbol">Ticker Symbol</label>
      <input
        type="text"
        class="form-control m-2"
        id="ticker-symbol"
        placeholder="Enter Ticker Symbol"
      />
      <button
        id="btn-lookup"
        type="button"
        class="btn btn-primary"
      >Search <i class="fas fa-search"></i></button>
    </div>
  <hr>
  <table id="lookup-result" class="table table-striped table-hover w-50" style="display: none;">
    <thead><tr>
      <th class="pr-4">Symbol</th>
      <th>Company Name</th>
    </tr>
    </thead>
    <tbody class="symbol-results">
    </tbody>
  </table>
</div>

<script src="/js/investment.js"></script>